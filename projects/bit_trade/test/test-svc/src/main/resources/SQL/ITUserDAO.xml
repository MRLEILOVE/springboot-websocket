<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.svc.dao.ITUserDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.test.pojo.model.TUser">
		<id javaType="int" property="id" jdbcType="INTEGER" column="id" />
		<result javaType="String" property="name" jdbcType="VARCHAR" column="name" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		`id` AS id, 
		`name` AS name
	</sql>

</mapper>