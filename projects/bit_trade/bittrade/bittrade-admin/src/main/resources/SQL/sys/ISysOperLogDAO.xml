<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bittrade.admin.dao.sys.ISysOperLogDAO">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bittrade.pojo.model.SysOperLog">
        <id column="oper_id" property="operId" />
        <result column="title" property="title" />
        <result column="business_type" property="businessType" />
        <result column="method" property="method" />
        <result column="operator_type" property="operatorType" />
        <result column="oper_name" property="operName" />
        <result column="dept_name" property="deptName" />
        <result column="oper_url" property="operUrl" />
        <result column="oper_ip" property="operIp" />
        <result column="oper_location" property="operLocation" />
        <result column="oper_param" property="operParam" />
        <result column="status" property="status" />
        <result column="error_msg" property="errorMsg" />
        <result column="oper_time" property="operTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        oper_id AS operId, title, business_type AS businessType, method, operator_type AS operatorType, oper_name AS operName, dept_name AS deptName, oper_url AS operUrl, oper_ip AS operIp, oper_location AS operLocation, oper_param AS operParam, status, error_msg AS errorMsg, oper_time AS operTime
    </sql>
    
    <sql id="selectOperLogVo">
        select oper_id, title, business_type, method, operator_type, oper_name, dept_name, oper_url, oper_ip, oper_location, oper_param, status, error_msg, oper_time
        from sys_oper_log
    </sql>
    
	<insert id="insertOperlog" parameterType="com.bittrade.pojo.model.SysOperLog">
		insert into sys_oper_log(title, business_type, method, operator_type, oper_name, dept_name, oper_url, oper_ip, oper_location, oper_param, status, error_msg, oper_time)
        values (#{title}, #{businessType}, #{method}, #{operatorType}, #{operName}, #{deptName}, #{operUrl}, #{operIp}, #{operLocation}, #{operParam}, #{status}, #{errorMsg}, sysdate())
	</insert>
	
	<select id="selectOperLogList" parameterType="com.bittrade.pojo.model.SysOperLog" resultMap="BaseResultMap">
		<include refid="selectOperLogVo"/>
		<where>
			<if test="operLog.title != null and operLog.title != ''">
				AND title like concat('%', #{operLog.title}, '%')
			</if>
			<if test="operLog.businessType != null">
				AND business_type = #{operLog.businessType}
			</if>
			<if test="operLog.operName != null and operLog.operName != ''">
				AND oper_name like concat('%', #{operLog.operName}, '%')
			</if>
			<if test="operLog.params.beginTime != null and operLog.params.beginTime != ''"><!-- 开始时间检索 -->
				and date_format(oper_time,'%y%m%d') &gt;= date_format(#{operLog.params.beginTime},'%y%m%d')
			</if>
			<if test="operLog.params.endTime != null and operLog.params.endTime != ''"><!-- 结束时间检索 -->
				and date_format(oper_time,'%y%m%d') &lt;= date_format(#{operLog.params.endTime},'%y%m%d')
			</if>
		</where>
	</select>
	
	<delete id="deleteOperLogByIds" parameterType="String">
 		delete from sys_oper_log where oper_id in
 		<foreach collection="array" item="operId" open="(" separator="," close=")">
 			#{operId}
        </foreach> 
 	</delete>
 	
 	<select id="selectOperLogById" parameterType="Integer" resultMap="BaseResultMap">
		<include refid="selectOperLogVo"/>
		where oper_id = #{operId}
	</select>
	
	<update id="cleanOperLog">
        truncate table sys_oper_log
    </update>

</mapper>
