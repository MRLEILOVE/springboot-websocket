<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bittrade.admin.dao.wallet.ITTransferDirectionDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.bittrade.pojo.model.TTransferDirection">
		<id javaType="int" property="id" jdbcType="INTEGER" column="id" />
		<result javaType="java.time.LocalDateTime" property="createTime" jdbcType="TIMESTAMP" column="create_time" />
		<result javaType="java.time.LocalDateTime" property="updateTime" jdbcType="TIMESTAMP" column="update_time" />
		<result javaType="Integer" property="mainAccountId" jdbcType="INTEGER" column="main_account_id" />
		<result javaType="Integer" property="targetAccountId" jdbcType="INTEGER" column="target_account_id" />
		<result javaType="Integer" property="status" jdbcType="INTEGER" column="status" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		`id` AS id, 
		`create_time` AS createTime, 
		`update_time` AS updateTime, 
		`main_account_id` AS mainAccountId, 
		`target_account_id` AS targetAccountId, 
		`status` AS status
	</sql>

    <select id="findList" resultType="com.bittrade.admin.model.vo.wallet.DirectionVo">
		SELECT d.id,m1.`name` AS mainAccount,m2.`name` AS targetAccount,d.`status`,d.update_time AS updateTime
		FROM t_transfer_direction d
		INNER JOIN t_account_manage m1 ON m1.id = d.main_account_id
		INNER JOIN t_account_manage m2 ON m2.id = d.target_account_id
	</select>

</mapper>