<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jdcloud.provider.mapper.HouseHistoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jdcloud.provider.pojo.HouseHistory">
        <id column="id" property="id"/>
        <result column="house_id" property="houseId"/>
        <result column="remark" property="remark"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, house_id AS houseId, remark, status, create_time AS createTime, update_time AS updateTime
    </sql>


    <select id="getHistoryList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        FROM
        g_house_history
        where
        1=1
        <if test="houseHistoryDto.params.beginTime!= null and houseHistoryDto.params.beginTime!= ''">
            AND DATE_FORMAT(create_time, '%Y-%m-%d') &gt;= DATE_FORMAT(#{houseHistoryDto.params.beginTime},'%Y-%m-%d')
        </if>
        <if test="houseHistoryDto.params.endTime != null and houseHistoryDto.params.endTime != ''">
            AND DATE_FORMAT(create_time, '%Y-%m-%d') &lt;= DATE_FORMAT(#{houseHistoryDto.params.endTime}, '%Y-%m-%d')
        </if>
        <if test="houseHistoryDto.status != null and houseHistoryDto.status != '' or houseHistoryDto.status==0">
            AND status =#{houseHistoryDto.status}
        </if>

    </select>


</mapper>
