<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bittrade.api.dao.ITEntrustRecordDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.bittrade.pojo.model.TEntrustRecord">
		<id javaType="int" property="id" jdbcType="INTEGER" column="id" />
		<result javaType="long" property="userId" jdbcType="BIGINT" column="user_id" />
		<result javaType="long" property="rivalUserId" jdbcType="BIGINT" column="rival_user_id" />
		<result javaType="long" property="entrustId" jdbcType="BIGINT" column="entrust_id" />
		<result javaType="long" property="rivalEntrustId" jdbcType="BIGINT" column="rival_entrust_id" />
		<result javaType="java.math.BigDecimal" property="amount" jdbcType="DECIMAL" column="amount" />
		<result javaType="java.math.BigDecimal" property="price" jdbcType="DECIMAL" column="price" />
		<result javaType="java.math.BigDecimal" property="count" jdbcType="DECIMAL" column="count" />
		<result javaType="java.math.BigDecimal" property="rate" jdbcType="DECIMAL" column="rate" />
		<result javaType="java.math.BigDecimal" property="fees" jdbcType="DECIMAL" column="fees" />
		<result javaType="int" property="currencyTradeId" jdbcType="INTEGER" column="currency_trade_id" />
		<result javaType="byte" property="isActive" jdbcType="INTEGER" column="is_active" />
		<result javaType="int" property="entrustType" jdbcType="INTEGER" column="entrust_type" />
		<result javaType="int" property="version" jdbcType="INTEGER" column="version" />
		<result javaType="java.util.Date" property="createTime" jdbcType="TIMESTAMP" column="create_time" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		`user_id` AS userId, 
		`rival_user_id` AS rivalUserId, 
		`entrust_id` AS entrustId, 
		`rival_entrust_id` AS rivalEntrustId, 
		`amount` AS amount, 
		`price` AS price, 
		`count` AS count, 
		`rate` AS rate, 
		`fees` AS fees, 
		`currency_trade_id` AS currencyTradeId, 
		`is_active` AS isActive, 
		`entrust_type` AS entrustType, 
		`version` AS version, 
		`create_time` AS createTime
	</sql>

	<select id="queryDealEntrustByUserId" parameterType="java.lang.String" resultType="com.bittrade.pojo.vo.TEntrustRecordVO">
		SELECT r.*
		FROM t_entrust_record r
		WHERE r.user_id = #{userId}
		ORDER BY r.id DESC
	</select>
</mapper>