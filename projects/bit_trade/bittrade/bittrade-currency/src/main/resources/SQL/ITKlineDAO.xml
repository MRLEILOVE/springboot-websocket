<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bittrade.currency.dao.ITKlineDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.bittrade.pojo.model.TKline">
		<id javaType="int" property="id" jdbcType="INTEGER" column="id" />
		<result javaType="String" property="symbol" jdbcType="VARCHAR" column="symbol" />
		<result javaType="java.math.BigDecimal" property="low" jdbcType="DECIMAL" column="low" />
		<result javaType="java.math.BigDecimal" property="high" jdbcType="DECIMAL" column="high" />
		<result javaType="java.math.BigDecimal" property="open" jdbcType="DECIMAL" column="open" />
		<result javaType="java.math.BigDecimal" property="close" jdbcType="DECIMAL" column="close" />
		<result javaType="java.math.BigDecimal" property="volume" jdbcType="DECIMAL" column="volume" />
		<result javaType="String" property="granularity" jdbcType="VARCHAR" column="granularity" />
		<result javaType="java.time.LocalDateTime" property="time" jdbcType="TIMESTAMP" column="time" />
		<result javaType="java.time.LocalDateTime" property="createTime" jdbcType="TIMESTAMP" column="create_time" />
		<result javaType="java.time.LocalDateTime" property="updateTime" jdbcType="TIMESTAMP" column="update_time" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		`symbol` AS symbol, 
		`low` AS low, 
		`high` AS high, 
		`open` AS open, 
		`close` AS close, 
		`volume` AS volume, 
		`granularity` AS granularity, 
		`time` AS time, 
		`create_time` AS createTime, 
		`update_time` AS updateTime
	</sql>

	<!-- k线查询	-->
	<select id="queryKLine" resultType="com.bittrade.pojo.vo.QueryKLineVO" parameterType="com.bittrade.pojo.dto.QueryKLineDto">
		SELECT l.symbol,l.high,l.low,l.`open`,l.`close`,l.granularity,l.time,l.volume
		FROM t_kline l
		WHERE  l.symbol = #{symbol}
		AND l.time <![CDATA[>=]]> #{beginTime}
		AND l.time <![CDATA[<=]]>  #{endTime}
		AND granularity = #{granularity}
	</select>

</mapper>