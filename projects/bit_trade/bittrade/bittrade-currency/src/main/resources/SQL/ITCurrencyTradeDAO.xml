<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bittrade.currency.dao.ITCurrencyTradeDAO">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.bittrade.pojo.model.TCurrencyTrade">
		<id javaType="int" property="id" jdbcType="INTEGER" column="id" />
		<result javaType="String" property="symbol" jdbcType="VARCHAR" column="symbol" />
		<result javaType="int" property="currencyId1" jdbcType="INTEGER" column="currency_id1" />
		<result javaType="int" property="currencyId2" jdbcType="INTEGER" column="currency_id2" />
		<result javaType="int" property="priceDecimalDigits" jdbcType="INTEGER" column="price_decimal_digits" />
		<result javaType="int" property="countDecimalDigits" jdbcType="INTEGER" column="count_decimal_digits" />
		<result javaType="java.math.BigDecimal" property="minBuyCount" jdbcType="DECIMAL" column="min_buy_count" />
		<result javaType="java.math.BigDecimal" property="minBuyPrice" jdbcType="DECIMAL" column="min_Buy_price" />
		<result javaType="java.math.BigDecimal" property="minBuyAmount" jdbcType="DECIMAL" column="min_buy_amount" />
		<result javaType="java.math.BigDecimal" property="maxBuyCount" jdbcType="DECIMAL" column="max_buy_count" />
		<result javaType="java.math.BigDecimal" property="maxBuyAmount" jdbcType="DECIMAL" column="max_buy_amount" />
		<result javaType="java.math.BigDecimal" property="maxBuyPrice" jdbcType="DECIMAL" column="max_buy_price" />
		<result javaType="byte" property="status" jdbcType="INTEGER" column="status" />
		<result javaType="int" property="sort" jdbcType="INTEGER" column="sort" />
		<result javaType="java.util.Date" property="createTime" jdbcType="TIMESTAMP" column="create_time" />
		<result javaType="java.util.Date" property="updateTime" jdbcType="TIMESTAMP" column="update_time" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		`symbol` AS symbol, 
		`currency_id1` AS currencyId1, 
		`currency_id2` AS currencyId2, 
		`price_decimal_digits` AS priceDecimalDigits, 
		`count_decimal_digits` AS countDecimalDigits, 
		`min_buy_count` AS minBuyCount, 
		`min_Buy_price` AS minBuyPrice, 
		`min_buy_amount` AS minBuyAmount, 
		`max_buy_count` AS maxBuyCount, 
		`max_buy_amount` AS maxBuyAmount, 
		`max_buy_price` AS maxBuyPrice, 
		`status` AS status, 
		`sort` AS sort, 
		`create_time` AS createTime, 
		`update_time` AS updateTime
	</sql>

	<!-- 根据法币id查找交易对	-->
	<select id="findTradeByCurrencyId2" resultType="com.bittrade.pojo.vo.TransactionPairVO" parameterType="java.lang.String">
		SELECT t.id,t.symbol,t.currency_id1 as  currencyId1,t.currency_id2 as currencyId2,o.id as optionalId
		FROM t_currency_trade t
		LEFT JOIN t_currency_optional o ON o.currency_trade_id = t.id AND o.user_id = #{userId}
		WHERE t.`status` = 1
		AND t.currency_id2 = #{currencyId2}
	</select>
</mapper>