<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.walletbiz.mapper.UserPayPasswordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.walletbiz.pojo.UserPayPassword">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="user_id" property="userId" />
        <result column="password" property="password" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_time AS createTime, update_time AS updateTime, user_id AS userId, password
    </sql>

    <select id="selectByUserId" parameterType="com.walletbiz.pojo.UserPayPassword"
            resultMap="BaseResultMap">
        SELECT
       password
        FROM p_user_pay_password
        WHERE user_id =#{userId}

    </select>
</mapper>
