    <select id="selectRechargePage" parameterType="com.jdcloud.provider.vo.WUserWalletBillVo"
            resultMap="BaseResultMap">
        SELECT
        amount,create_time,token,receiver_address
        FROM w_user_wallet_bill
        WHERE user_id =#{userId}
        ORDER BY
        create_time desc
